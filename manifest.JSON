{
    "manifest_version": 3,
    "name": "Advanced Search Helper",
    "version": "1.0",
    "description": "Generate and copy Boolean strings for advanced browser searches.",
    "permissions": ["clipboardWrite", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  